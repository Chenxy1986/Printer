<UserControl x:Class="NanoImprinter.Views.ImprintView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ces="clr-namespace:NanoImprinter.ControlExtensions"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:cs="clr-namespace:NanoImprinter.Controls"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             d:DesignHeight="1010"
             d:DesignWidth="1670"
             Background="White"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=" 35" />
            <RowDefinition Height=" 1*" />
            <RowDefinition Height=" 1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="2"
              Style="{StaticResource Grid.ViewTitle.BorderTextBlock}">
            <Border />
            <TextBlock Text="压印模块" />
        </Grid>

        <GroupBox Grid.Row="1"
                  Margin="10"
                  Header="掩膜压印"
                  Style="{StaticResource GroupBox.DefaultStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <ces:ParameterDisplayControl x:Name="tbImprintVel"
                                             ParamName="压印速度"
                                             ParamUnit="mm/s"
                                             ParamValue="{Binding MaskZWorkVel}"/>
                <ces:ParameterDisplayControl x:Name="tbCameraMoveVel"
                                             Grid.Row="0"
                                             Grid.Column="1"
                                             ParamName="拍照速度"
                                             ParamValue="{Binding CameraZWorkVel}"
                                             ParamUnit="mm" />
                <ces:ParameterDisplayControl x:Name="tbPreprintHeight"
                                             Grid.Row="1"
                                             Grid.Column="0"
                                             ParamName="预压印位"
                                             ParamValue="{Binding PreprintPosition}"
                                             ParamUnit="mm" />
                <ces:ParameterDisplayControl x:Name="tbTakePictureHeight"
                                             Grid.Row="1"
                                             Grid.Column="1"
                                             ParamName="拍照位"
                                             ParamValue="{Binding TakePicturePosition}"
                                             ParamUnit="mm" />

                <Button x:Name="btnMaskSaveParameter"
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="50,20"
                        Content="保存参数"
                        FontSize="20"
                        Command="{Binding SaveParamCommand}"/>
                <UniformGrid Grid.Row="3"
                             Grid.ColumnSpan="2"
                             Columns="4">
                    <Button x:Name="btnMaskMoveToPrepintHeight"
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="20"
                            Content="移动预压印位"
                            Command="{Binding MoveToPreprintPositionCommand}"
                            FontSize="20" />
                    <Button x:Name="btnMaskMoveToTakePictureHeight"
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="20"
                            Content="移动拍照位"
                            Command="{Binding MoveToTakePicturePositionCommand}"
                            FontSize="20" />
                    <Button x:Name="btnMaskGoHome"
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="20"
                            Content="回零"
                            Command="{Binding MaskZGoHomeCommand}"
                            FontSize="20" />
                    <Button x:Name="btnMaskResetAlarm"
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="20"
                            Content="清除报警"
                            Command="{Binding ResetAlarmCommand}"
                            FontSize="20" />
                </UniformGrid>
            </Grid>
        </GroupBox>



        <GroupBox Grid.Row="1"
                  Grid.Column="1"
                  Margin="10"
                  Header="UV光源"
                  Style="{StaticResource GroupBox.DefaultStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <ces:ParameterDisplayControl x:Name="tbIrradiationPosition"
                                             ParamName="照射位"
                                             ParamUnit="mm/s"
                                             ParamValue="{Binding IrradiationPosition}"/>
                <ces:ParameterDisplayControl x:Name="tbUVWorkVel"
                                             Grid.Row="0"
                                             Grid.Column="1"
                                             ParamName="工作速度"
                                             ParamValue="{Binding CameraWorkVel}"
                                             ParamUnit="mm" />
                <ces:ParameterDisplayControl x:Name="tbUVWaitPosition"
                                             Grid.Row="1"
                                             Grid.Column="0"
                                             ParamName="等待位"
                                             ParamValue="{Binding WaitPosition}"
                                             ParamUnit="mm" />

                <Button x:Name="btnUVSaveParameter"
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="50,20"
                        Content="保存参数"
                        Command="{Binding SaveParamCommand}"
                        FontSize="20" />
                <UniformGrid Grid.Row="3"
                             Grid.ColumnSpan="2"
                             Columns="4">
                    <Button x:Name="btnUVMoveToPrepintHeight"
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="20"
                            Content="移动等待位"
                            Command="{Binding MoveToWaitPositionCommand}"
                            FontSize="20" />
                    <Button x:Name="btnUVMoveToTakePictureHeight"
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="20"
                            Content="移动照射位"
                            Command="{Binding MoveToIrradiationPositionCommand}"
                            FontSize="20" />
                    <Button x:Name="btnUVGoHome"
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="20"
                            Content="回零"
                            Command="{Binding UVGoHomeCommand}"
                            FontSize="20" />
                    <Button x:Name="btnUVResetAlarm"
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="20"
                            Content="清除报警"
                            Command="{Binding ResetAlarmCommand}"
                            FontSize="20" />
                </UniformGrid>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="2"
                  Header="轴操作"
                  FontSize="24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                
                <StackPanel Orientation="Horizontal">
                    <Label Content="轴号" />
                    <ComboBox BorderBrush="White" />
                </StackPanel>
                <cs:AxisControl Grid.Row="1"/>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>