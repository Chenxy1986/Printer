<UserControl x:Class="NanoImprinter.Views.GlueView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NanoImprinter.Views"
             xmlns:cs="clr-namespace:NanoImprinter.Controls"
             xmlns:ces="clr-namespace:NanoImprinter.ControlExtensions"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             d:DesignHeight="1010"
             d:DesignWidth="1670"
             Background="White"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=" 35" />
            <RowDefinition Height=" 1*" />
            <RowDefinition Height=" 1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="2"
              Style="{StaticResource Grid.ViewTitle.BorderTextBlock}">
            <Border />
            <TextBlock Text="点胶模块" />
        </Grid>
        
        <GroupBox Grid.Row="1"
                  Margin="10"
                  Header="位置参数"
                  Style="{StaticResource GroupBox.DefaultStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <ces:ParameterDisplayControl x:Name="tbGlueWaitPosition"
                                             ParamName="等待位"
                                             ParamUnit="mm" />
                <ces:ParameterDisplayControl x:Name="tbGluePosition"
                                             Grid.Row="0"
                                             Grid.Column="1"
                                             ParamName="点胶位"
                                             ParamUnit="mm" />
                <ces:ParameterDisplayControl x:Name="tbGlueWorkVel"
                                             Grid.Row="1"
                                             Grid.Column="0"
                                             ParamName="工作速度"
                                             ParamUnit="mm/s" />
                <Button x:Name="btnGlueSaveParameter"
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="50,20"
                        Content="保存参数"
                        FontSize="20"
                        Command="{Binding SaveParamCommand}"/>
                <UniformGrid Grid.Row="3"
                             Grid.ColumnSpan="2"
                             Columns="4">
                    <Button x:Name="btnGlueMoveToPrepintHeight"
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="20"
                            Content="移动等待位"
                            Command="{Binding MoveToWaitPositionCommand}"
                            FontSize="20" />
                    <Button x:Name="btnGlueMoveToTakePictureHeight"
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="20"
                            Content="移动点胶位"
                            Command="{Binding MoveToGluePositionCommand}"
                            FontSize="20" />
                    <Button x:Name="btnGlueGoHome"
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="20"
                            Content="回零"
                            FontSize="20" 
                            Command="{Binding GoHomeCommand}"/>
                    <Button x:Name="btnGlueResetAlarm"
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="20"
                            Content="清除报警"
                            FontSize="20" />
                </UniformGrid>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="1"
                  Grid.Column="1"
                  Margin="10"
                  Header="点胶控制器参数"
                  Style="{StaticResource GroupBox.DefaultStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <ces:ParameterDisplayControl x:Name="tbGlueControlOpen"
                                             ParamName="开阀时间"
                                             ParamUnit="mm" />
                <ces:ParameterDisplayControl x:Name="tbGlueControlClose"
                                             Grid.Row="0"
                                             Grid.Column="1"
                                             ParamName="关阀时间"
                                             ParamUnit="mm" />
                <ces:ParameterDisplayControl x:Name="tbGlueControlIntensity"
                                             Grid.Row="1"
                                             Grid.Column="0"
                                             ParamName="开阀力度"
                                             ParamUnit="N" />
                <ces:ParameterDisplayControl x:Name="tbGlueControlTemplate"
                                             Grid.Row="1"
                                             Grid.Column="1"
                                             ParamName="温度"
                                             ParamUnit="℃" />

                <Button x:Name="btnGlueControlSaveParameter"
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="50,20"
                        Content="保存参数"
                        FontSize="20"
                        Command="{Binding SaveParamCommand}"/>
                <Button x:Name="btnGlueControlTest"
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="50,20"
                        Content="点胶测试"
                        Command="{Binding GlueCommand}"
                        FontSize="20" />
            </Grid>
        </GroupBox>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            
            <cs:AxisControl Grid.Row="0"
                            Axes="{Binding Axes}" />
        </Grid>
    </Grid>
</UserControl>
